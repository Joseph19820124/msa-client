# React Client Environment Configuration
# Copy this file to .env and configure your actual values

# API Service URLs
REACT_APP_API_GATEWAY_URL=http://localhost:5000
REACT_APP_POSTS_SERVICE_URL=http://localhost:4000
REACT_APP_COMMENTS_SERVICE_URL=http://localhost:4001
REACT_APP_AUTH_SERVICE_URL=http://localhost:4002

# Environment
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0

# Application Configuration
REACT_APP_SITE_NAME=MSA Blog Platform
REACT_APP_SITE_DESCRIPTION=Microservices Blog and Forum Platform
REACT_APP_SITE_URL=http://localhost:3000

# Authentication Configuration
REACT_APP_ENABLE_OAUTH=true
REACT_APP_ENABLE_REGISTRATION=true
REACT_APP_JWT_STORAGE_KEY=msa_token
REACT_APP_REFRESH_TOKEN_KEY=msa_refresh_token

# Feature Flags
REACT_APP_ENABLE_COMMENTS=true
REACT_APP_ENABLE_USER_PROFILES=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_ANALYTICS=false

# Analytics (optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_SENTRY_DSN=

# API Configuration
REACT_APP_API_TIMEOUT=10000
REACT_APP_RETRY_ATTEMPTS=3
REACT_APP_RETRY_DELAY=1000

# Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# UI Configuration
REACT_APP_POSTS_PER_PAGE=10
REACT_APP_COMMENTS_PER_PAGE=20
REACT_APP_AUTO_REFRESH_INTERVAL=30000

# Development Only
REACT_APP_DEBUG_MODE=true
REACT_APP_MOCK_API=false

# PWA Configuration
REACT_APP_ENABLE_PWA=false
REACT_APP_PWA_THEME_COLOR=#000000
REACT_APP_PWA_BACKGROUND_COLOR=#ffffff