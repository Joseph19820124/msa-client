# Auth Service Environment Configuration
# Copy this file to .env and configure your actual values

# Server Configuration
NODE_ENV=development
PORT=4002
HOST=0.0.0.0

# Service Information
SERVICE_NAME=auth-service
SERVICE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/auth_db
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_CONNECT_TIMEOUT_MS=10000
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis Configuration (for sessions and refresh tokens)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=2
REDIS_CONNECT_TIMEOUT=10000

# JWT Configuration - Token Signing (Auth Service generates tokens)
JWT_PRIVATE_KEY=path/to/jwt-private.key
JWT_PUBLIC_KEY=path/to/jwt-public.key
JWT_ALGORITHM=RS256
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MS=900000
PASSWORD_RESET_EXPIRES_MS=3600000
EMAIL_VERIFICATION_EXPIRES_MS=86400000

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4002/auth/google/callback

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_CALLBACK_URL=http://localhost:4002/auth/facebook/callback

GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:4002/auth/github/callback

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Your App Name

# Frontend URLs
CLIENT_URL=http://localhost:3000
FRONTEND_LOGIN_SUCCESS_URL=http://localhost:3000/dashboard
FRONTEND_LOGIN_FAILURE_URL=http://localhost:3000/login?error=oauth_failed
FRONTEND_PASSWORD_RESET_URL=http://localhost:3000/reset-password

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_AUTH_MAX_REQUESTS=5
RATE_LIMIT_DELAY_MS=2000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/auth-service.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Security Configuration
SESSION_SECRET=your-session-secret-key-here
COOKIE_MAX_AGE=86400000
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Service Communication
POSTS_SERVICE_URL=http://localhost:4000
COMMENTS_SERVICE_URL=http://localhost:4001
API_GATEWAY_URL=http://localhost:5000

# Feature Flags
ENABLE_OAUTH=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true

# Monitoring and APM
ENABLE_MONITORING=false
APM_SERVICE_NAME=auth-service
APM_SERVER_URL=http://localhost:8200

# Database Migration
RUN_MIGRATIONS_ON_START=false
MIGRATE_DATABASE=false

# Two-Factor Authentication
ENABLE_2FA=false
TOTP_SERVICE_NAME=Your App Name
TOTP_ISSUER=yourdomain.com