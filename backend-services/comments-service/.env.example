# Comments Service Environment Configuration
# Copy this file to .env and configure your actual values

# Server Configuration
NODE_ENV=development
PORT=4001
HOST=0.0.0.0

# Service Information
SERVICE_NAME=comments-service
SERVICE_VERSION=1.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/comments_db
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_CONNECT_TIMEOUT_MS=10000
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_CONNECT_TIMEOUT=10000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-key
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_DELAY_MS=500

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/comments-service.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here
COOKIE_MAX_AGE=86400000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Service Communication
POSTS_SERVICE_URL=http://localhost:4000
AUTH_SERVICE_URL=http://localhost:4002
API_GATEWAY_URL=http://localhost:5000

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_METRICS=true
ENABLE_SWAGGER=true

# Monitoring and APM
ENABLE_MONITORING=false
APM_SERVICE_NAME=comments-service
APM_SERVER_URL=http://localhost:8200

# Comment Moderation
ENABLE_AUTO_MODERATION=true
PROFANITY_FILTER_ENABLED=true
SPAM_DETECTION_ENABLED=true
MAX_COMMENT_LENGTH=1000

# Database Migration
RUN_MIGRATIONS_ON_START=false
MIGRATE_DATABASE=false