# API Gateway Environment Configuration
# Copy this file to .env and configure your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Service Information
SERVICE_NAME=api-gateway
SERVICE_VERSION=1.0.0

# Redis Configuration (for rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3
REDIS_CONNECT_TIMEOUT=10000

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars

# Service URLs
POSTS_SERVICE_URL=http://localhost:4000
COMMENTS_SERVICE_URL=http://localhost:4001
AUTH_SERVICE_URL=http://localhost:4002

# Load Balancing
ENABLE_LOAD_BALANCING=false
POSTS_SERVICE_INSTANCES=http://localhost:4000
COMMENTS_SERVICE_INSTANCES=http://localhost:4001
AUTH_SERVICE_INSTANCES=http://localhost:4002

# Circuit Breaker Configuration
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Rate Limiting
GLOBAL_RATE_LIMIT_WINDOW_MS=900000
GLOBAL_RATE_LIMIT_MAX_REQUESTS=1000
API_RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=20

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080
CORS_CREDENTIALS=true
CORS_MAX_AGE=86400

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs/api-gateway.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Request/Response Configuration
REQUEST_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb
ENABLE_COMPRESSION=true
COMPRESSION_THRESHOLD=1024

# Security Configuration
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=false
TRUST_PROXY=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
ENABLE_HEALTH_ENDPOINT=true

# API Documentation
ENABLE_SWAGGER=true
SWAGGER_TITLE=Microservices API
SWAGGER_DESCRIPTION=API Gateway for Blog/Forum Microservices
SWAGGER_VERSION=1.0.0

# Monitoring and Metrics
ENABLE_MONITORING=true
ENABLE_METRICS=true
METRICS_PATH=/metrics
PROMETHEUS_ENDPOINT=http://localhost:9090

# Feature Flags
ENABLE_REQUEST_LOGGING=true
ENABLE_RESPONSE_CACHING=true
ENABLE_API_VERSIONING=true
DEFAULT_API_VERSION=v1

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
ENABLE_REDIS_CACHE=true

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_RETRIES=3
PROXY_RETRY_DELAY=1000