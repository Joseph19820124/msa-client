# Server Configuration
PORT=4001
HOST=localhost
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/comments_service
DB_MAX_POOL_SIZE=10
DB_TIMEOUT=5000

# External Services
POSTS_SERVICE_URL=http://localhost:4000
POSTS_SERVICE_TIMEOUT=5000

# Security Configuration - JWT Verification
JWT_PUBLIC_KEY=path/to/jwt-public.key
JWT_ALGORITHM=RS256
BCRYPT_ROUNDS=12
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
TRUST_PROXY=false

# Rate Limiting Configuration (in milliseconds)
BASIC_RATE_WINDOW=900000
BASIC_RATE_MAX=1000
COMMENT_RATE_WINDOW=300000
COMMENT_RATE_MAX=10
REPORT_RATE_WINDOW=600000
REPORT_RATE_MAX=5
LIKE_RATE_WINDOW=60000
LIKE_RATE_MAX=30
ADMIN_RATE_WINDOW=60000
ADMIN_RATE_MAX=100

# Content Moderation Configuration
AUTO_APPROVE=false
STRICT_MODERATION=false
PROFANITY_FILTER=true
SPAM_DETECTION=true
MAX_COMMENT_LENGTH=1000
MAX_COMMENT_DEPTH=3
EDIT_WINDOW_HOURS=24

# Anti-Spam Configuration
MIN_TIME_BETWEEN_COMMENTS=10000
DUPLICATE_CONTENT_WINDOW=300000
MAX_URLS_PER_COMMENT=1
SUSPICIOUS_ACTIVITY_THRESHOLD=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_FILE_LOGGING=false
LOG_DIRECTORY=./logs

# Cache Configuration (Redis - optional)
CACHE_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=300

# Feature Flags
ENABLE_THREADING=true
ENABLE_LIKES=true
ENABLE_REPORTS=true
ENABLE_BULK_MODERATION=true
ENABLE_ANALYTICS=true
ENABLE_HEALTH_CHECKS=true

# Notification Configuration (optional)
NOTIFICATIONS_ENABLED=false
NOTIFICATION_WEBHOOK_URL=
MODERATION_ALERTS=false
SPAM_ALERTS=false

# Performance Configuration
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_ETAG=true
MAX_REQUEST_SIZE=1mb

# Test Configuration
TEST_MONGODB_URI=mongodb://localhost:27017/comments_service_test